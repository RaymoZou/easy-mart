extends layout 

block content
    h1(class="m-3")=title
    div(class="container card-deck")
        for item in items
            div(class="card shadow-sm")
                a(href=item.url class="card-header font-weight-bold") #{item.name}
                div(class="card-body")
                    p(class="card-text")=item.description
                    p $#{item.price}
